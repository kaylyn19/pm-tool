<!DOCTYPE html>
<html>
  <head>
    <title>Pmtool</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <%= link_to "Home", root_path%> | 
  <%= link_to "About", about_path%> | 
  <%= link_to "New Project", new_project_path%> | 
  <%= link_to "List of Projects", projects_path%> |
  
  <% if user_signed_in? %>
    <%= link_to "Sign Out", sessions_path, method: :delete, data: {confirm: "Are you sure you want to log out?"}%> | 
    <%= link_to "Change Password", edit_user_password_path(current_user.id)%>
    <p>Signed in as <%= link_to current_user.full_name, edit_user_path(current_user.id)%></p>
  <% else %>
    <%= link_to "Sign In", new_sessions_path%> | 
    <%= link_to "Sign Up", new_user_path%> |
  <% end %>

  <%= flash[:notice] || flash[:alert] %>
  <%= yield %>
  </body>
</html>
